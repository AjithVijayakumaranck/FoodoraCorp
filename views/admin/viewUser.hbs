<div class="row">
    
                    <div class="col-xl-12">
                        <div class="card">                                
                            <div class="card-body">
                                <h5 class="header-title pb-3 mt-0 fw-bold">User Details</h5>
                                <div class="table-responsive">
                                    <table class="table table-hover mb-0 " id="datatable">
                                        <thead>
                                            
                                            <tr class="align-self-center">
                                                <th>Index</th>
                                                <th>First name</th>
                                                <th>Last name</th>
                                                <th>Email</th>
                                                <th>Contact</th>
                                                                                                                                  
                                                <th>Block/Unblock</th>
                                                <th>Delete</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                          {{#each response}}  
                                            <tr>
                                                <td>{{inc @index}}</td>
                                                <td>
                                                    {{!-- <img src="/images/users/avatar-1.jpg" alt="" class="thumb-sm rounded-circle mr-2"> --}}
                                                    {{this.FirstName}}
                                                </td>
                                                <td>{{this.LastName}}</td>
                                                <td>{{this.Email}}</td>
                                                <td>{{this.Phone}}</td>  
                                                {{#if this.blockStatus}}
                                            
                                                <td><a href="/admin/userBlockStatus/{{this._id}}" class="btn rounded btn-success" style=" background-color: #3cff00; border:0">Active</a></td>    
                                               {{else}}
                                                   <td><a href="/admin/userBlockStatus/{{this._id}}" class="btn rounded btn-success" style=" background-color: #FF6C00; border:0">Blocked</a></td>                                                                 
                                            {{/if}}
                                              <td><a href="/admin/DeleteUser/{{this._id}}" class="btn rounded btn-success" style=" background-color: #ff0000; border:0" onclick="return confirm('Are you sure you want to delete {{this.FirstName}} profile')">Delete</a></td>                                                                 
                                            </tr>
                                                {{/each}}                                                                   
                                        </tbody>
                                    </table>
                                </div><!--end table-responsive-->
                                